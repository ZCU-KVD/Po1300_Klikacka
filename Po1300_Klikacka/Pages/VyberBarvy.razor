@page "/vyberBarvy"

<PageTitle>Klikačka</PageTitle>

<h1>Vybarvení tabulky</h1>

<div>
	<table class="vyber-barev">
		
		<tr>
			@foreach (var bunka in Grafika.BarvySeznam)
			{
				<td class="@bunka.StyleClass" @onclick="()=>Grafika.OnCellClick(bunka)">
					@bunka.Hodnota
				</td>
			}
				
		</tr>

	</table>
</div>

<div>
	<table>
		@for (int i = 0; i < Grafika.Pole.GetLength(0); i++)
		{
			var radka = i;
			<tr>
				@for (int j = 0; j < Grafika.Pole.GetLength(1); j++)
				{
					var sloupec = j;
					<td class="@Grafika.Pole[radka, sloupec].StyleClass" @onclick="()=>Grafika.OnCellClick(Grafika.Pole[radka, sloupec])">
						@Grafika.Pole[i, j].Hodnota
					</td>
				}
			</tr>
		}
	</table>
</div>

@code {
	private Models.Grafika Grafika { get; } = new Models.Grafika(10,15);
}